{
  "type": "object",
  "required": ["version", "generatedAt", "modules"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "generatedAt": { "type": "string", "format": "date" },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key","plain","status","owner","sources"],
        "properties": {
          "key": { "type": "string", "pattern": "^[a-z0-9-_]+$" },
          "display": { "type": "string" },
          "plain": { "type": "string" },
          "slug": { "type": "string", "pattern": "^/[^\\s]*$" },
          "type": { "enum": ["ui","service","library","experiment","webapi"] },
          "isUserFacing": { "type": "boolean" },
          "schemaType": { "enum": ["SoftwareApplication","WebAPI"] },
          "status": { "enum": ["public","internal","experimental","candidate"] },
          "owner": { "type": "string", "minLength": 1 },
          "allowLambdaInDisplay": { "type": "boolean", "default": false },
          "requireTransparency": { "type": "boolean" },
          "defaultTone": { "enum": ["plain","technical"] },
          "themes": { "type": "array", "items": { "type": "string" }, "maxItems": 6 },
          "locales": { "type": "array", "items": { "type": "string" } },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "legacyAliases": { "type": "array", "items": { "type": "string" } },
          "sources": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "lastVerified": { "type": "string" },
          "scannerVersion": { "type": "string" }
        },
        "allOf": [
          {
            "if": { "properties": { "isUserFacing": { "const": true } } },
            "then": { "required": ["slug","requireTransparency"], "properties": { "requireTransparency": { "const": true } } }
          }
        ]
      }
    }
  }
}
