{
  "enforcement": {
    "blockingRules": {
      "description": "Violations that fail builds and block deployments",
      "severity": "error",
      "exitCode": 1
    },
    "reviewRules": {
      "description": "Violations that require human review but don't block builds",
      "severity": "warning",
      "exitCode": 0
    }
  },
  "brand": {
    "display": ["LUKHΛS", "ΛI", "MΛTRIZ", "ΛiD"],
    "plain": ["Lukhas", "AI", "Matriz", "Lukhas ID"],
    "lambdaDisplayOnly": true,
    "requireAriaForLambda": true
  },
  "tone": {
    "poetic": {
      "maxWords": 40,
      "noClaims": true
    },
    "plain": {
      "maxGradeLevel": 8.0
    }
  },
  "blockingViolations": {
    "description": "Hard rules that fail builds",
    "lambdaInUrls": true,
    "lambdaInAltText": true,
    "missingAriaForLambda": true,
    "deprecatedMatada": true,
    "criticalBannedWords": [
      "guaranteed",
      "flawless",
      "perfect",
      "zero-risk",
      "unbreakable",
      "magical",
      "miracle"
    ]
  },
  "reviewRequired": {
    "description": "Claims that need human review but don't block builds",
    "performanceClaims": [
      "revolutionary",
      "groundbreaking",
      "game-changing",
      "breakthrough",
      "cutting-edge",
      "world-class",
      "industry-leading",
      "state-of-the-art",
      "unparalleled",
      "unlimited"
    ],
    "marketPositioning": [
      "first",
      "only",
      "best",
      "leading",
      "dominant",
      "superior"
    ],
    "technicalAchievements": [
      "advanced",
      "sophisticated",
      "powerful",
      "robust",
      "scalable"
    ]
  },
  "vendorPhrases": [
    {
      "pattern": "partnered with (OpenAI|Anthropic|Google)",
      "replace": "integrates with $1 APIs"
    },
    {
      "pattern": "powered by (OpenAI|Anthropic|Google)",
      "replace": "uses $1 APIs"
    },
    {
      "pattern": "endorsed by (OpenAI|Anthropic|Google)",
      "replace": "compatible with $1 systems"
    },
    {
      "pattern": "official (OpenAI|Anthropic|Google) integration",
      "replace": "$1 API integration"
    }
  ],
  "a11y": {
    "requireTransparencyBox": true,
    "respectReducedMotion": true,
    "minContrastRatio": 4.5,
    "requireAltText": true
  },
  "i18n": {
    "forbidLambdaInBody": true,
    "falseFriendsES": ["matada"],
    "falseFriendsPT": ["matada"],
    "falseFriendsFR": ["matrice"],
    "falseFriendsIT": ["matrice"]
  },
  "visual": {
    "svgTextForbidden": true,
    "lambdaMustBePath": true,
    "requireCSPCompliance": true,
    "requireSRIHashes": true
  },
  "governance": {
    "requireBDRForBrandingChanges": true,
    "bdrTemplateVersion": "1.0.0",
    "approvalThreshold": 2
  },
  "metrics": {
    "maxPageLoadTime": 3000,
    "maxLCPTime": 2500,
    "minLighthouseScore": 90,
    "maxBundleSize": 500000
  }
}
