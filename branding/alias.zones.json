{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lukhas.ai/schemas/alias-zones.json",
  "title": "Î›iD Identity Zones Registry",
  "description": "Canonical registry of allowed ZONE values for LUKHAS identity system with geographic and regulatory compliance mapping",
  "type": "object",
  "properties": {
    "zones": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/zone"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "maintainer": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "zone": {
      "type": "object",
      "required": ["code", "name", "description", "active", "dataResidency"],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z]{2,5}$",
          "description": "Uppercase zone identifier (2-5 characters)"
        },
        "name": {
          "type": "string",
          "description": "Human-readable zone name"
        },
        "description": {
          "type": "string",
          "description": "Detailed zone description"
        },
        "active": {
          "type": "boolean",
          "description": "Whether this zone accepts new alias registrations"
        },
        "deprecated": {
          "type": "boolean",
          "description": "Whether this zone is deprecated (but still valid)"
        },
        "dataResidency": {
          "type": "object",
          "properties": {
            "countries": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2}$"
              },
              "description": "ISO 3166-1 alpha-2 country codes for data residency"
            },
            "cloudRegions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Cloud provider regions for data storage"
            },
            "primary": {
              "type": "string",
              "pattern": "^[A-Z]{2}$",
              "description": "Primary country for legal jurisdiction"
            }
          }
        },
        "compliance": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["GDPR", "SOC2", "CCPA", "PIPEDA", "LGPD", "PDPA"]
          },
          "description": "Regional compliance frameworks"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
          },
          "description": "Supported languages (ISO 639-1 with optional country code)"
        },
        "timezone": {
          "type": "object",
          "properties": {
            "primary": {
              "type": "string",
              "description": "Primary timezone for the zone"
            },
            "supported": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "All timezones supported in this zone"
            }
          }
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "contact": {
          "type": "object",
          "properties": {
            "team": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    }
  },
  "zones": [
    {
      "code": "EU",
