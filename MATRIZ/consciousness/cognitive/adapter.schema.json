{
  "module": "matriz.consciousness.cognitive.adapter",
  "version": "1.0.0",
  "type": "cognitive_adapter_node",
  "matriz_compatible": true,
  "description": "Cognitive adapter for translating between different cognitive representations and processing modes",

  "capabilities": {
    "sends": [
      {
        "signal": "cognitive.translation.result",
        "schema": "TranslationResult",
        "frequency": "per_translation",
        "latency_target_ms": 100
      },
      {
        "signal": "cognitive.mode.switch",
        "schema": "CognitiveMode",
        "frequency": "on_switch",
        "priority": "normal"
      }
    ],
    "receives": [
      {
        "signal": "cognitive.translate.request",
        "schema": "TranslationRequest",
        "handler": "translate",
        "required": true
      },
      {
        "signal": "cognitive.adapt.request",
        "schema": "AdaptationRequest",
        "handler": "adapt",
        "required": true
      }
    ]
  },

  "main_classes": [
    {
      "name": "CognitiveAdapter",
      "type": "adapter",
      "methods": ["translate", "adapt", "switch_mode"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 100,
    "target_latency_p95_ms": 75,
    "memory_limit_mb": 100,
    "cpu_cores": 1
  },

  "constellation_integration": {
    "stars": ["consciousness", "vision"],
    "validates": false,
    "blocks_on_failure": false
  }
}
