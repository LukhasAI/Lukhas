{
  "module": "matriz.consciousness.core.engine_poetic",
  "version": "1.0.0",
  "type": "poetic_consciousness_node",
  "matriz_compatible": true,
  "description": "Poetic consciousness engine for metaphorical and symbolic processing in consciousness layer",

  "capabilities": {
    "sends": [
      {
        "signal": "consciousness.poetic.expression",
        "schema": "PoeticExpression",
        "frequency": "per_expression",
        "latency_target_ms": 300
      },
      {
        "signal": "consciousness.metaphor.generated",
        "schema": "MetaphorGeneration",
        "frequency": "on_creation",
        "priority": "low"
      }
    ],
    "receives": [
      {
        "signal": "consciousness.poetic.request",
        "schema": "PoeticRequest",
        "handler": "generate_poetic_expression",
        "required": true
      }
    ]
  },

  "main_classes": [
    {
      "name": "PoeticEngine",
      "type": "engine",
      "methods": ["generate_poetic_expression", "create_metaphor"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 300,
    "target_latency_p95_ms": 200,
    "memory_limit_mb": 75,
    "cpu_cores": 1
  },

  "constellation_integration": {
    "stars": ["consciousness", "dream"],
    "validates": false,
    "blocks_on_failure": false
  }
}
