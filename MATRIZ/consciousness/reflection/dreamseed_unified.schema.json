{
  "module": "matriz.consciousness.reflection.dreamseed_unified",
  "version": "1.0.0",
  "type": "dreamseed_node",
  "matriz_compatible": true,
  "description": "Unified dreamseed system for creative synthesis and dream-state consciousness processing",

  "capabilities": {
    "sends": [
      {
        "signal": "dream.seed.generated",
        "schema": "DreamSeed",
        "frequency": "per_generation",
        "latency_target_ms": 1000
      },
      {
        "signal": "dream.synthesis.result",
        "schema": "DreamSynthesis",
        "frequency": "per_synthesis",
        "priority": "low"
      }
    ],
    "receives": [
      {
        "signal": "dream.seed.request",
        "schema": "DreamSeedRequest",
        "handler": "generate_seed",
        "required": true
      },
      {
        "signal": "dream.synthesize.request",
        "schema": "DreamSynthesizeRequest",
        "handler": "synthesize_dream",
        "required": false
      }
    ]
  },

  "main_classes": [
    {
      "name": "DreamSeedUnified",
      "type": "synthesizer",
      "methods": ["generate_seed", "synthesize_dream"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 1000,
    "target_latency_p95_ms": 750,
    "memory_limit_mb": 150,
    "cpu_cores": 1
  },

  "constellation_integration": {
    "stars": ["dream", "consciousness", "memory"],
    "validates": false,
    "blocks_on_failure": false
  }
}
