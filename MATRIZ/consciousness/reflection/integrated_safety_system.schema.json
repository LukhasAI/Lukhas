{
  "module": "matriz.consciousness.reflection.integrated_safety_system",
  "version": "1.0.0",
  "type": "safety_system_node",
  "matriz_compatible": true,
  "description": "Integrated safety system for consciousness reflection layer with multi-layered protection mechanisms",

  "capabilities": {
    "sends": [
      {
        "signal": "safety.check.result",
        "schema": "SafetyCheckResult",
        "frequency": "per_check",
        "latency_target_ms": 100
      },
      {
        "signal": "safety.violation.alert",
        "schema": "SafetyViolationAlert",
        "frequency": "on_violation",
        "priority": "critical"
      }
    ],
    "receives": [
      {
        "signal": "safety.check.request",
        "schema": "SafetyCheckRequest",
        "handler": "check_safety",
        "required": true
      }
    ]
  },

  "main_classes": [
    {
      "name": "IntegratedSafetySystem",
      "type": "safety_system",
      "methods": ["check_safety", "monitor_violations"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 100,
    "target_latency_p95_ms": 75,
    "memory_limit_mb": 150,
    "cpu_cores": 2
  },

  "constellation_integration": {
    "stars": ["guardian", "ethics", "consciousness"],
    "validates": true,
    "blocks_on_failure": true
  }
}
