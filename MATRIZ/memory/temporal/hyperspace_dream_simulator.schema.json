{
  "module": "matriz.memory.temporal.hyperspace_dream_simulator",
  "version": "1.0.0",
  "type": "dream_simulation_node",
  "matriz_compatible": true,
  "description": "Hyperspace dream simulation engine for creative synthesis and unconscious processing in temporal memory space",

  "capabilities": {
    "sends": [
      {
        "signal": "dream.simulation.result",
        "schema": "DreamSimulationResult",
        "frequency": "per_dream",
        "latency_target_ms": 5000
      },
      {
        "signal": "dream.insight.generated",
        "schema": "DreamInsight",
        "frequency": "on_insight",
        "priority": "low"
      },
      {
        "signal": "dream.memory.synthesized",
        "schema": "SynthesizedMemory",
        "frequency": "per_synthesis",
        "retention_days": 90
      }
    ],
    "receives": [
      {
        "signal": "dream.simulate.request",
        "schema": "DreamSimulationRequest",
        "handler": "simulate_dream",
        "required": true
      },
      {
        "signal": "dream.seed.memory",
        "schema": "SeedMemory",
        "handler": "seed_dream_state",
        "required": false
      }
    ]
  },

  "main_classes": [
    {
      "name": "HyperspaceDreamSimulator",
      "type": "simulator",
      "methods": ["simulate_dream", "seed_dream_state", "synthesize_memories"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 5000,
    "target_latency_p95_ms": 3000,
    "memory_limit_mb": 300,
    "cpu_cores": 2
  },

  "constellation_integration": {
    "stars": ["dream", "memory", "quantum"],
    "validates": false,
    "blocks_on_failure": false
  }
}
