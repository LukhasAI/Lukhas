# LUKHAS Innovation System - Environment Configuration Template
# Copy this file to .env and configure as needed

# Guardian System Thresholds
GUARDIAN_DRIFT_THRESHOLD=0.15
HALLUCINATION_THRESHOLD=0.10
SAFETY_PASS_THRESHOLD=0.95

# API Configuration (optional)
OPENAI_API_KEY=sk-...
API_TIMEOUT_SECONDS=30
MAX_RETRIES=3

# Test Configuration
USE_MOCK_DATA=false
ENABLE_API_FALLBACK=true
TEST_SEED=2025

# Logging
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
LOG_TO_FILE=false

# Safety Settings
ENABLE_SAFETY_CHECKS=true
REQUIRE_HUMAN_APPROVAL=false
MAX_PARALLEL_REALITIES=50000

# Research Mode
RESEARCH_MODE=true
SANDBOX_ONLY=true
ENABLE_RED_TEAM_TESTS=true