#!/usr/bin/env python3
"""
LUKHAS Journal CLI wrapper
Makes the journal command available system-wide
"""

import sys
import os

# Add the project root to Python path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

from tools.journal.journal_cli import cli

if __name__ == '__main__':
    cli()