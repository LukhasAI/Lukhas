{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lukhas:audit_event_v1.json",
  "title": "AuditEventV1",
  "type": "object",
  "required": ["node_id", "timestamp", "decision_type", "input_hash", "decision_output"],
  "properties": {
    "node_id": { "type": "string", "minLength": 8 },
    "timestamp": { "type": "number" },
    "decision_type": { "type": "string" },
    "input_hash": { "type": "string", "minLength": 32 },
    "parent_nodes": { "type": "array", "items": { "type": "string" } },
    "active_brains": { "type": "array", "items": { "type": "object" } },
    "brain_votes": { "type": "object", "additionalProperties": true },
    "consensus_mechanism": { "type": ["string", "null"] },
    "reasoning_steps": { "type": "array", "items": { "type": "string" } },
    "considered_alternatives": { "type": "array" },
    "decision_output": {},
    "raw_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "calibrated_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "uncertainty": { "type": "object" },
    "confidence_level": { "type": "string" },
    "safety_checks": { "type": "array", "items": { "type": "string" } },
    "safety_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "validation_status": { "type": "string" },
    "ground_truth": {},
    "outcome_error": { "type": ["number", "null"] },
    "outcome_timestamp": { "type": ["number", "null"] },
    "execution_time_ms": { "type": "number" },
    "memory_used_mb": { "type": "number" },
    "tags": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
