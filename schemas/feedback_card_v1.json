{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lukhas:feedback_card_v1",
  "title": "Feedback Card UI v1",
  "type": "object",
  "required": ["node_id", "layout"],
  "properties": {
    "node_id": { "type": "string" },
    "layout": {
      "type": "object",
      "required": ["rating_scale", "fields"],
      "properties": {
        "rating_scale": { "type": "integer", "enum": [5, 6, 10], "default": 5 },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": { "type": "string" },
              "label": { "type": "string" },
              "type": { "type": "string", "enum": ["textarea", "chips", "select"] },
              "options": { "type": "array", "items": { "type": "string" } },
              "maxLength": { "type": "integer" }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
