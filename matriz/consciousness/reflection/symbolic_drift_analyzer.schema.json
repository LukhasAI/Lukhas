{
  "module": "matriz.consciousness.reflection.symbolic_drift_analyzer",
  "version": "1.0.0",
  "type": "drift_analysis_node",
  "matriz_compatible": true,
  "description": "Symbolic drift analyzer for detecting and analyzing behavioral and conceptual drift in consciousness systems",

  "capabilities": {
    "sends": [
      {
        "signal": "drift.analysis.result",
        "schema": "DriftAnalysisResult",
        "frequency": "per_analysis",
        "latency_target_ms": 200
      },
      {
        "signal": "drift.alert",
        "schema": "DriftAlert",
        "frequency": "on_threshold",
        "priority": "high"
      }
    ],
    "receives": [
      {
        "signal": "drift.analyze.request",
        "schema": "DriftAnalysisRequest",
        "handler": "analyze_drift",
        "required": true
      }
    ]
  },

  "main_classes": [
    {
      "name": "SymbolicDriftAnalyzer",
      "type": "analyzer",
      "methods": ["analyze_drift", "detect_threshold_breach"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 200,
    "target_latency_p95_ms": 150,
    "memory_limit_mb": 100,
    "cpu_cores": 1
  },

  "constellation_integration": {
    "stars": ["guardian", "ethics"],
    "validates": true,
    "blocks_on_failure": false
  }
}
