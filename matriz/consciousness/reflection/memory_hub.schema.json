{
  "module": "matriz.consciousness.reflection.memory_hub",
  "version": "1.0.0",
  "type": "memory_hub_node",
  "matriz_compatible": true,
  "description": "Memory hub for consciousness reflection layer coordinating memory access and integration",

  "capabilities": {
    "sends": [
      {
        "signal": "memory.hub.access_result",
        "schema": "MemoryAccessResult",
        "frequency": "per_access",
        "latency_target_ms": 75
      },
      {
        "signal": "memory.hub.integration_event",
        "schema": "MemoryIntegrationEvent",
        "frequency": "on_integration",
        "priority": "normal"
      }
    ],
    "receives": [
      {
        "signal": "memory.hub.access_request",
        "schema": "MemoryAccessRequest",
        "handler": "access_memory",
        "required": true
      },
      {
        "signal": "memory.hub.integrate_request",
        "schema": "MemoryIntegrateRequest",
        "handler": "integrate_memory",
        "required": false
      }
    ]
  },

  "main_classes": [
    {
      "name": "MemoryHub",
      "type": "hub",
      "methods": ["access_memory", "integrate_memory"],
      "async": true
    }
  ],

  "dependencies": [],

  "performance": {
    "max_latency_ms": 75,
    "target_latency_p95_ms": 50,
    "memory_limit_mb": 200,
    "cpu_cores": 1
  },

  "constellation_integration": {
    "stars": ["memory", "consciousness"],
    "validates": true,
    "blocks_on_failure": false
  }
}
