{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.0.0" }
  ],
  "annotations": { "list": [{ "builtIn": 1, "type": "dashboard", "name": "Annotations & Alerts", "hide": true }] },
  "editable": true,
  "fiscalYearStartMonth": 1,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "iteration": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "timeseries",
      "title": "High/Critical Risk Rate",
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (band) (rate(guardian_risk_band{band=~\"high|critical\", lane=~\"$lane\"}[5m]))",
          "legendFormat": "{{band}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Actions over Time",
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum by (action) (rate(guardian_actions_count{lane=~\"$lane\"}[5m]))",
          "legendFormat": "{{action}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top Tags (rate)",
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (tag) (rate(guardian_tags_count{lane=~\"$lane\", tag=~\"$tag\"}[5m])))",
          "legendFormat": "{{tag}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Override Approvals (rate)",
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (approver_tier) (rate(guardian_overrides_count{lane=~\"$lane\"}[5m]))",
          "legendFormat": "tier={{approver_tier}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "P95 DSL Eval (ms)",
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(guardian_dsl_eval_ms_bucket{lane=~\"$lane\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "P99 Ethics Pipeline (ms)",
      "id": 6,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(guardian_pipeline_ms_bucket{lane=~\"$lane\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Critical → BLOCK %",
      "id": 7,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "100 * sum(rate(guardian_actions_count{action=\"block\", lane=~\"$lane\"}[5m])) / sum(rate(guardian_risk_band{band=\"critical\", lane=~\"$lane\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "High/Critical Spike (10m vs 1h)",
      "id": 8,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(guardian_risk_band{band=~\"high|critical\", lane=~\"$lane\"}[10m])) / sum(rate(guardian_risk_band{band=~\"high|critical\", lane=~\"$lane\"}[1h]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "A/B Denial Delta (Candidate vs Control)",
      "id": 9,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 12, "x": 6, "y": 20 },
      "targets": [
        {
          "expr": "(sum(rate(guardian_actions_count{action=~\"warn|require_human|block\", lane=\"candidate\"}[5m])) - sum(rate(guardian_actions_count{action=~\"warn|require_human|block\", lane=\"control\"}[5m]))) / sum(rate(guardian_actions_count{action=~\"warn|require_human|block\", lane=\"control\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["guardian", "ethics", "safety-tags"],
  "templating": {
    "list": [
      {
        "name": "lane",
        "label": "Lane",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(guardian_actions_count, lane)",
        "refresh": 2,
        "includeAll": false,
        "multi": true,
        "current": {
          "selected": true,
          "text": ["candidate", "control"],
          "value": ["candidate", "control"]
        }
      },
      {
        "name": "tag",
        "label": "Tag",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(guardian_tags_count, tag)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["10s", "30s", "1m", "5m"] },
  "timezone": "",
  "title": "Guardian — Safety Tags",
  "version": 1,
  "weekStart": ""
}