# LUKHAS AI Environment Variables
# Copy this file to .env.local and fill in your values

# ===== Core Configuration =====
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===== Authentication & Identity (Î›iD) =====
# JWT Configuration
AUTH_JWT_PRIVATE_JWK={"kty":"RSA","kid":"lukhas-2024","alg":"RS256","use":"sig","n":"...","e":"AQAB","d":"..."}
AUTH_JWKS_JSON=[{"kty":"RSA","kid":"lukhas-2024","alg":"RS256","use":"sig","n":"...","e":"AQAB"}]
AUTH_ACCESS_TTL_MINUTES=15
AUTH_REFRESH_TTL_DAYS=30
AUTH_SESSION_SECRET=your-session-secret-min-32-chars

# WebAuthn Configuration
NEXT_PUBLIC_RPID=localhost
NEXT_PUBLIC_RP_NAME="LUKHAS AI"
WEBAUTHN_ORIGIN=http://localhost:3000

# Magic Links
MAGIC_LINK_TTL=600000
MAGIC_LINK_SECRET=your-magic-link-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Identity & Alias System
LID_ALIAS_SECRET=your-hmac-secret-for-alias-generation-min-32-chars
IDENTIFIER_SALT=your-salt-for-identifier-hashing-min-32-chars
SECRET_PEPPER=your-server-pepper-for-argon2id-min-32-chars

# Challenge Configuration
CHALLENGE_TTL_MS=120000
CHALLENGE_MAX_TRIES=3

# Secure Payment Confirmation
NEXT_PUBLIC_FEATURE_SPC=false

# ===== SSO & Enterprise (T4/T5) =====
# Okta
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret

# Azure AD
AZURE_AD_ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret

# Google Workspace
GOOGLE_ISSUER=https://accounts.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Generic OIDC
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret

# SCIM Configuration
SCIM_AUTH_TOKEN=your-scim-bearer-token
SCIM_ENDPOINT_URL=https://your-app.com/api/scim/v2

# ===== External AI Services =====
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google AI
GOOGLE_API_KEY=...

# Perplexity
PERPLEXITY_API_KEY=pplx-...

# ===== Database =====
DATABASE_URL=postgresql://user:password@localhost:5432/lukhas_db
REDIS_URL=redis://localhost:6379

# ===== Email Service =====
EMAIL_FROM="LUKHAS AI <noreply@lukhas.ai>"
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Resend (alternative)
RESEND_API_KEY=re_...

# ===== Analytics & Monitoring =====
NEXT_PUBLIC_GA_ID=G-...
SENTRY_DSN=https://...@sentry.io/...
POSTHOG_API_KEY=phc_...
MIXPANEL_TOKEN=...

# ===== Guardian System & Ethics =====
ETHICS_ENFORCEMENT_LEVEL=strict
DRIFT_DETECTION_THRESHOLD=0.15
GUARDIAN_VERSION=1.0.0
CONSTITUTIONAL_AI_ENABLED=true

# ===== Memory & Consciousness =====
MEMORY_FOLD_LIMIT=1000
CASCADE_PREVENTION_THRESHOLD=0.997
DREAM_SIMULATION_ENABLED=true
QUANTUM_PROCESSING_ENABLED=true
BIO_ADAPTATION_ENABLED=true

# ===== LUKHAS Core Modules =====
LUKHAS_ID_SECRET=your-lukhas-id-secret-min-32-chars
LUKHAS_CORE_VERSION=2.1.0
TRINITY_FRAMEWORK_ENABLED=true
GLYPH_ENGINE_ENABLED=true
MATRIZ_ACCESS_ENABLED=true

# ===== API Keys for Testing =====
TEST_USER_EMAIL=test@lukhas.ai
TEST_USER_ID=user_test_001

# ===== Feature Flags =====
FEATURE_PASSKEYS_ENABLED=true
FEATURE_MAGIC_LINKS_ENABLED=true
FEATURE_SSO_ENABLED=false
FEATURE_SCIM_ENABLED=false
FEATURE_RBAC_ENABLED=true

# ===== Compliance & Security =====
GDPR_COMPLIANT=true
CCPA_COMPLIANT=true
AUDIT_LOG_RETENTION_DAYS=90
DATA_ENCRYPTION_KEY=your-256-bit-encryption-key

# ===== Development Tools =====
VERBOSE_LOGGING=false
DEBUG_MODE=false
MOCK_AUTH=false