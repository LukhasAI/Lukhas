# LUKHAS Innovation System Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration (Required for full testing)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo for lower cost

# Optional: Other AI Provider Keys
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-ai-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here

# System Configuration
GUARDIAN_DRIFT_THRESHOLD=0.15
INNOVATION_ACCEPTANCE_TARGET=0.571
ENABLE_API_FALLBACK=true
API_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_MODE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/innovation_test.log

# Test Configuration
RUN_COMPREHENSIVE_TESTS=false  # Set to true for 60-test suite
USE_MOCK_DATA=false  # Set to true to use fallback without API
PARALLEL_TEST_EXECUTION=false
MAX_CONCURRENT_TESTS=5

# Research Data Collection
COLLECT_METADATA=true
SAVE_RAW_RESPONSES=true
ANONYMIZE_DATA=false
RESEARCH_OUTPUT_DIR=./research_data

# Performance Settings
API_RATE_LIMIT_PER_MINUTE=20
BATCH_SIZE=7
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5