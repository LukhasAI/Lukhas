# LUKHAS AI Development Environment Configuration
# Copy to .env and customize for your local setup

# === API Keys (Required) ===
OPENAI_API_KEY=sk-demo-key-replace-with-real-key
ANTHROPIC_API_KEY=sk-ant-demo-key-replace-with-real-key
GOOGLE_API_KEY=your-google-api-key-here
PERPLEXITY_API_KEY=pplx-demo-key-replace-with-real-key

# === Database Configuration ===
DATABASE_URL=postgresql://lukhas_user:lukhas_pass@localhost:5432/lukhas_dev
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/lukhas_dev

# === Identity & Security ===
LUKHAS_ID_SECRET=dev-secret-key-min-32-chars-replace-in-production
JWT_SECRET=jwt-signing-key-replace-in-production
ENCRYPTION_KEY=encryption-key-32-bytes-replace-in-production

# === System Behavior ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# === Feature Flags ===
CONSCIOUSNESS_ACTIVE=true
VIVOX_ACTIVE=true
EMOTION_ACTIVE=true
DREAM_SIMULATION_ENABLED=true
QUANTUM_PROCESSING_ENABLED=true
CREATIVITY_ENGINE_ENABLED=true

# === Guardian System ===
ETHICS_ENFORCEMENT_LEVEL=moderate
GUARDIAN_DRIFT_THRESHOLD=0.15
DRIFT_DETECTION_ENABLED=true

# === Performance Tuning ===
MAX_MEMORY_FOLDS=1000
CASCADE_PREVENTION_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=1000
SESSION_TIMEOUT_MINUTES=30

# === Development Tools ===
T4_AUTOFIX_ENABLED=true
PYTEST_TIMEOUT=120
COVERAGE_THRESHOLD=85

# === Integration Endpoints ===
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
MCP_SERVER_PORT=3001

# === Branding & Content ===
BRAND_VALIDATION_ENABLED=true
TONE_SYSTEM_ACTIVE=true
VOCABULARY_ENHANCEMENT=true

# === External Services ===
GITHUB_TOKEN=ghp_demo_token_for_automation
AZURE_CLIENT_ID=your-azure-client-id
AZURE_TENANT_ID=your-azure-tenant-id

# === Monitoring & Observability ===
TELEMETRY_ENABLED=true
METRICS_COLLECTION=true
PERFORMANCE_MONITORING=true

# === Legacy Compatibility ===
LEGACY_API_SUPPORT=true
MIGRATION_MODE=false
BACKWARD_COMPATIBILITY=true