# LUKHAS Dream EXPAND - Environment Controls
# All features disabled by default for safety

# ============================================================================
# Noise Injection System
# ============================================================================
# Adds controlled noise to emotion vectors for robustness testing
LUKHAS_NOISE_LEVEL=off                  # off|low|med|high
# Noise intensities: low=0.05, med=0.15, high=0.3

# ============================================================================
# Dream Resonance Field
# ============================================================================
# Maintains emotional continuity across dream selections
LUKHAS_DREAM_RESONANCE=0                # 0=disabled, 1=enabled
LUKHAS_RESONANCE_DECAY=0.9              # Decay factor (0.1-0.99)

# ============================================================================
# Multi-Agent Dream Mesh
# ============================================================================
# Collective dreaming across multiple agents
LUKHAS_MULTI_AGENT=0                    # 0=disabled, 1=enabled
LUKHAS_MESH_AGGREGATION=mean            # mean|median|max|min
LUKHAS_MESH_MIN_AGENTS=2                # Minimum agents required

# ============================================================================
# Adaptive Strategy Evolution
# ============================================================================
# Evolutionary optimization of strategy parameters
LUKHAS_STRATEGY_EVOLVE=0                # 0=disabled, 1=enabled
LUKHAS_EVOLVE_MUTATION_RATE=0.1         # Probability of gene mutation
LUKHAS_EVOLVE_MUTATION_STRENGTH=0.05    # Maximum mutation magnitude
LUKHAS_EVOLVE_POPULATION_SIZE=10        # Evolution population size

# ============================================================================
# Legacy Environment Variables (from previous phases)
# ============================================================================

# Dream Core Settings
LUKHAS_BENCH_SEED=42                    # Deterministic randomness
LUKHAS_MAX_SNAPSHOT_AGE_SEC=0           # Staleness filtering (0=disabled)
LUKHAS_SNAPSHOT_HALF_LIFE_SEC=0         # Temporal weighting (0=disabled)

# Strategy Configuration
LUKHAS_HYBRID_ALPHA=0.5                 # Blend strategy weight
LUKHAS_ALIGNMENT_THRESHOLD=0.5          # Minimum alignment score
LUKHAS_DRIFT_THRESHOLD=0.3              # Maximum drift tolerance
LUKHAS_CONFIDENCE_THRESHOLD=0.7         # Minimum confidence level

# System Configuration
LUKHAS_CI_MODE=0                        # 0=normal, 1=CI optimizations
LUKHAS_DEBUG_MODE=0                     # 0=normal, 1=debug logging

# ============================================================================
# Safety and Compliance Notes
# ============================================================================
#
# - All EXPAND features are OPT-IN and disabled by default
# - Values are clamped to safe ranges automatically
# - No production impact unless explicitly enabled
# - Benchmarks remain isolated from runtime unless flagged
#
# For production use:
# 1. Test thoroughly in staging environment first
# 2. Enable features one at a time
# 3. Monitor system behavior closely
# 4. Have rollback plan ready
#
# ============================================================================