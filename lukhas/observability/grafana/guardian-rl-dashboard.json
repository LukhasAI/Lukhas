{
  "dashboard": {
    "title": "Guardian & Rate-Limit Observability (v0.9.0-rc)",
    "uid": "guardian-rl-v090",
    "timezone": "utc",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Guardian Denial Rate (%)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 * (rate(guardian_denied_total[5m]) / (rate(guardian_decision_total{effect=\"allow\"}[5m]) + rate(guardian_decision_total{effect=\"deny\"}[5m])))",
            "legendFormat": "Denial Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Denial Rate",
            "logBase": 1,
            "min": 0,
            "max": 100
          },
          {
            "format": "short",
            "logBase": 1
          }
        ],
        "thresholds": [
          {
            "value": 1,
            "colorMode": "custom",
            "op": "gt",
            "fill": true,
            "line": true,
            "yaxis": "left",
            "fillColor": "rgba(255, 152, 48, 0.2)",
            "lineColor": "rgba(255, 152, 48, 1)"
          },
          {
            "value": 5,
            "colorMode": "custom",
            "op": "gt",
            "fill": true,
            "line": true,
            "yaxis": "left",
            "fillColor": "rgba(237, 129, 40, 0.3)",
            "lineColor": "rgba(237, 129, 40, 1)"
          }
        ],
        "alert": {
          "name": "High Guardian Denial Rate",
          "message": "Guardian is denying >1% of requests for 10 minutes",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "10m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "1m",
          "for": "10m"
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "alignAsTable": true
        }
      },
      {
        "id": 2,
        "title": "Rate Limit Near-Exhaustion (Remaining < 5)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate_limiter_remaining",
            "legendFormat": "Remaining ({{route}})",
            "refId": "A"
          },
          {
            "expr": "rate_limiter_limit",
            "legendFormat": "Limit ({{route}})",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Requests",
            "logBase": 1,
            "min": 0
          },
          {
            "format": "short",
            "logBase": 1
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "custom",
            "op": "lt",
            "fill": true,
            "line": true,
            "yaxis": "left",
            "fillColor": "rgba(255, 152, 48, 0.3)",
            "lineColor": "rgba(255, 152, 48, 1)"
          }
        ],
        "alert": {
          "name": "Rate Limit Near Exhaustion",
          "message": "Rate limit remaining < 5 for 3 minutes",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "3m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "min"
              },
              "type": "query"
            }
          ],
          "frequency": "1m",
          "for": "3m"
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "min": true,
          "alignAsTable": true
        }
      },
      {
        "id": 3,
        "title": "Guardian PDP Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(guardian_decision_latency_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(guardian_decision_latency_seconds_bucket[5m]))",
            "legendFormat": "p95 (target <10ms)",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(guardian_decision_latency_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency",
            "logBase": 1,
            "min": 0
          },
          {
            "format": "short",
            "logBase": 1
          }
        ],
        "thresholds": [
          {
            "value": 0.01,
            "colorMode": "custom",
            "op": "gt",
            "fill": false,
            "line": true,
            "yaxis": "left",
            "lineColor": "rgba(255, 152, 48, 1)"
          }
        ],
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "alignAsTable": true
        }
      },
      {
        "id": 4,
        "title": "Rate-Limited Requests (429 responses)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate-Limited Requests/s",
            "refId": "A"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{status=\"429\"}[5m])",
            "legendFormat": "429 Responses/s",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/s",
            "logBase": 1,
            "min": 0
          },
          {
            "format": "short",
            "logBase": 1
          }
        ],
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "alignAsTable": true
        }
      }
    ]
  }
}
