{
  "dashboard": {
    "id": "lukhas-t4-hardening",
    "title": "LUKHAS T4 Hardening Operations",
    "tags": ["lukhas", "t4", "hardening", "consciousness"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "T4 Test Suite Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "t4_unit_contracts_duration_seconds",
            "legendFormat": "Unit Contracts Duration"
          },
          {
            "expr": "t4_capability_suite_duration_seconds",
            "legendFormat": "Capability Suite Duration"
          },
          {
            "expr": "t4_e2e_smoke_duration_seconds",
            "legendFormat": "E2E Smoke Duration"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "max": 120,
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 60,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 2,
        "title": "Signal Routing Health",
        "type": "stat",
        "targets": [
          {
            "expr": "lukhas_router_no_rule_total",
            "legendFormat": "Unrouted Signals"
          },
          {
            "expr": "lukhas_signals_processed_total",
            "legendFormat": "Total Signals Processed"
          }
        ],
        "thresholds": [
          {
            "color": "green",
            "value": 0
          },
          {
            "color": "red",
            "value": 1
          }
        ]
      },
      {
        "id": 3,
        "title": "Network Coherence",
        "type": "gauge",
        "targets": [
          {
            "expr": "lukhas_network_coherence",
            "legendFormat": "Coherence Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "green",
                  "value": 0.8
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cascade Prevention Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "lukhas_cascade_prevention_rate",
            "legendFormat": "Prevention Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0.99
                },
                {
                  "color": "green",
                  "value": 0.997
                }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "version": "t4-hardening-golden-state"
  }
}