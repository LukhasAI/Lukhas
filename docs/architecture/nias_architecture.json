  "emotional_states": {
    "description": "NIAS respects user emotional state for appropriate delivery timing",
    "states": {
      "receptive": {
        "allow_delivery": true,
        "priority_boost": 1.2,
        "optimal_timing": true,
        "widget_enhancement": true
