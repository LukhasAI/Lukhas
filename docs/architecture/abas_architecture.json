  "decision_system": {
    "description": "Intelligent attention request processing and decision making",
    "decision_types": {
      "allow": {
        "description": "Request approved for immediate processing",
        "conditions": ["low cognitive cost", "appropriate timing", "available attention"],
        "confidence_factors": ["attention_state", "boundary_status", "request_priority"]
      },
      "defer": {
        "description": "Request postponed to optimal timing",
        "conditions": ["high cognitive cost", "boundary violation", "recovery needed"],
        "defer_strategies": ["next_break", "lower_load_period", "user_preference"]
      },
      "block": {
        "description": "Request rejected for protection reasons",
        "conditions": ["flow_state_protection", "overload_prevention", "boundary_enforcement"],
        "block_reasons": ["cognitive_protection", "flow_preservation", "recovery_enforcement"]
      },
      "transform": {
        "description": "Request modified for better fit",
        "conditions": ["partial_compatibility", "complexity_reduction", "urgency_with_protection"],
        "transform_strategies": ["complexity_reduction", "format_change", "timing_adjustment"]
      }
