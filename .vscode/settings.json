{
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.callArgumentNames": "off",
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.flake8Args": [
        "--config=.flake8",
        "--max-line-length=88"
    ],
    "python.formatting.provider": "black",
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.defaultFormatter": "vscode.markdown-language-features",
        "editor.wordWrap": "on"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".pytest_cache": true,
        "*.egg-info": true,
        ".mypy_cache": true,
        ".ruff_cache": true,
        "*backup*": true,
        ".event_bus_backup*": true,
        ".hygiene_backup*": true,
        "htmlcov": true,
        ".coverage": true
    },
    "python.analysis.include": [
        "core/**",
        "vivox/**", 
        "config/**",
        "compliance/**",
        "examples/**",
        "lukhas_pwm/**",
        "main.py"
    ],
    "python.analysis.exclude": [
        "recovery/**",
        ".pwm_cleanup_archive/**",
        "archive/**",
        "tools/**",
        "docs/**",
        "**/tests/**",
        "**/test_*.py",
        "**/*_test.py"
    ],
    "python.analysis.stubPath": "./typings",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportMissingModuleSource": "none",
        "reportUndefinedVariable": "none",
        "reportGeneralTypeIssues": "none",
        "reportOptionalMemberAccess": "none",
        "reportOptionalSubscript": "none",
        "reportPrivateImportUsage": "none",
        "reportUnboundVariable": "none"
    },
    
    // GitHub Copilot Optimization Settings
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": true,
        "python": true,
        "javascript": true,
        "typescript": true,
        "json": true
    },
    
    // Reduce tool overload by limiting suggestion providers
    "github.copilot.advanced": {
        "length": 500,
        "temperature": 0.1,
        "top_p": 1,
        "inlineSuggestCount": 3,
        "listCount": 10
    },
    
    // Chat settings to optimize tool usage
    "github.copilot.chat.enabled": true,
    "github.copilot.chat.welcomeMessage": "never",
    "github.copilot.chat.localeOverride": "en",
    
    // Editor optimizations for Copilot
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.suppressSuggestions": false,
    "editor.inlineSuggest.showToolbar": "onHover",
    
    // Performance optimizations
    "github.copilot.suggestions.count": 3,
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.editor.enableCodeActions": false,
    
    // Disable conflicting tools and extensions
    "tabnine.disable": true,
    "intellicode.disable": true,
    
    // Focus Copilot on specific file types
    "github.copilot.preferredLanguages": [
        "python",
        "typescript",
        "javascript",
        "json",
        "markdown"
    ],
    
    // Reduce memory usage
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    
    // Tool management
    "github.copilot.chat.experimental.codeGeneration": false,
    "github.copilot.chat.experimental.generateTests": true,
    "github.copilot.chat.experimental.generateDocs": true,
    
    // Claude Code Integration Settings
    "claude.apiKey": "configured_in_extension",
    "claude.model": "claude-3-5-sonnet-20241022",
    "claude.maxTokens": 4096,
    "claude.temperature": 0.1,
    "claude.autocomplete": true,
    "claude.contextLength": 8000,
    
    // Claude + LUKHAS Optimization
    "claude.customInstructions": "Use LUKHAS Trinity Framework (ðŸŽ­ðŸŒˆðŸŽ“) in documentation. Preserve symbolic vocabulary: memory_fold, dream_resonance, consciousness_engine. Add symbolic markers (âš›ï¸ðŸ§ ðŸ›¡ï¸) in code comments. Follow LUKHAS naming patterns.",
    
    // Multi-AI Coordination
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showConstructors": true,
    "editor.suggest.showClasses": true,
    
    // AI Tool Priority (Claude > Copilot for complex tasks)
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",
    
    // Explorer and Open Editors Settings
    "explorer.openEditors.visible": 10,
    "explorer.openEditors.sortOrder": "editorOrder",
    "explorer.compactFolders": false,
    "workbench.explorer.fileNesting.enabled": false,
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "bottom"
}
