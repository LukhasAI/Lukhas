{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-q"],
  "python.testing.cwd": "${workspaceFolder}",
  "python.envFile": "${workspaceFolder}/.env",

  // Formatter/Linter = Ruff (TEMPORARILY DISABLED FOR MANUAL FIXES)
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    // "source.fixAll.ruff": "always",
    // "source.organizeImports.ruff": "always"
  },
  "[python]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  "[markdown]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  "[json]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  "[yaml]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.path": ["${workspaceFolder}/.venv/bin/ruff"],
  "ruff.interpreter": ["${workspaceFolder}/.venv/bin/python"],

  // Pylance type hints are fine, MyPy runs via CLI/CI
  "python.analysis.typeCheckingMode": "basic",

  // Disable other formatters/linters
  "python.formatting.provider": "none",
  "python.linting.enabled": false,

  // Disable unittest
  "python.testing.unittestEnabled": false,

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pytest_cache": true,
    ".mypy_cache": true,
    ".ruff_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/build": true,
    "**/dist": true,
    "**/*.egg-info": true,
    "**/coverage": true,
    "**/*.log": true,
    "**/test-results": true
  },

  // ‚öõÔ∏èüß†üõ°Ô∏è LUKHAS AI GitHub Copilot Auto-Approve Enhanced Configuration
  "github.copilot.advanced": {
    "length": 800,
    "temperature": "0.1",
    "top_p": "0.95",
    "inlineSuggestCount": 5
  },
  "github.copilot.enable": {
    "*": true,
    "python": true,
    "javascript": true,
    "typescript": true,
    "json": true,
    "yaml": true,
    "markdown": true,
    "plaintext": true
  },
  
  // üöÄ Auto-Approve Settings for LUKHAS Consciousness Development
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.enableAutoApply": true,
  "github.copilot.suggestions.enabled": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.inlineSuggest.suppressSuggestions": false,
  "github.copilot.editor.iterativeFixMode": true,
  "github.copilot.renameSuggestions.enabled": true,
  
  // üéØ Enhanced Copilot Chat Features for Phase 3 Surgical Repair
  "github.copilot.chat.experimental.workspaceContext": true,
  "github.copilot.chat.experimental.terminalIntegration": true,
  "github.copilot.chat.experimental.smartActions": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.localeOverride": "en",
  
  // üß† Consciousness-Aware Auto-Suggestions
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": "allDocuments",
  
  // üõ°Ô∏è Trinity Framework Context Enhancement
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.suggest.preview": true,
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,

  // Additional Context Limiting for Large Repositories
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.git": true
  },

  // AI Context Window Management (Enhanced for Consciousness Development)
  "codex.maxTokens": 2000,
  "codex.includeOpenTabs": true,
  "codex.includeWorkspaceContext": true,
  "codex.maxFileSize": 100000,
  "codex.includeNearbyFiles": true,
  
  // TypeScript Enhanced Auto-Import for Consciousness Modules
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.enabled": true,
  "typescript.suggest.paths": true,
  "typescript.suggest.completeFunctionCalls": true,
  
  // üé≠ LUKHAS-Specific Auto-Completion Patterns
  "editor.wordPattern": "[\\w\\-\\.\\$‚öõÔ∏èüß†üõ°Ô∏èŒõ]+",
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,
  
  // Performance Optimization for Large Codebase
  "editor.suggest.maxVisibleSuggestions": 15,
  "editor.suggest.filterGraceful": true,
  "editor.suggest.insertMode": "replace",
  "files.associations": {
    "*.py": "python",
    "*.md": "markdown",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "*.json": "jsonc"
  }
}