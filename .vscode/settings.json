{
  // GitHub Copilot Integration
  "github.copilot.enable": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.suggestionDelay": 300,
  "github.copilot.advanced": true,
  "github.copilot.enableCompletions": true,
  "github.copilot.enablePanel": false,
  "github.copilot.enableAutoCompletions": true,
  "github.copilot.enableTabCompletions": true,
  "github.copilot.enableStatusBar": false,
  "github.copilot.enableSuggestions": true,
  "github.copilot.enableInNotebooks": true,
  "github.copilot.enableInTerminal": false,
  "github.copilot.enableInComments": true,
  "github.copilot.enableInMarkdown": true,
  "github.copilot.enableInPython": true,
  "github.copilot.enableInJupyter": true,
  "github.copilot.enableInInteractive": true,
  // LUKHAS_PWM Consciousness Development Settings
  "consciousness.development.mode": true,
  "trinity.framework.active": true,
  "lukhas.pwm.project": true,
  
  // Python Environment
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  
  // File Exclusions for LUKHAS_PWM
  "files.exclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pwm_cleanup_archive": true
  },
  
  // Search Exclusions
  "search.exclude": {
    ".venv": true,
    ".pwm_cleanup_archive": true,
    "**/__pycache__": true
  },
  
  // LUKHAS Agent Protection Settings - CRITICAL FILES
  "agents.configs.autoBackup": true,
  "consciousness.modules.protection": true,
  "trinity.framework.preservation": true,
  
  // Critical File Monitoring
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.venv/**": true
  },
  "files.participants.timeout": 5000,
  "files.simpleDialog.enable": true,
  
  // Claude Agent Army Integration
  "claude.contextFiles": [
    ".vscode/claude-context/project-context.md",
    ".vscode/claude-context/coding-standards.md",
    ".vscode/claude-context/api-patterns.md",
    "README.md",
    "FINAL_IMPLEMENTATION_REPORT.md",
    "./CLAUDE_ARMY.md",
    "./branding/trinity/TRINITY_BRANDING_GUIDELINES.md",
    "./lukhas_pwm_config.yaml",
    "./.claude/tasks/real_consciousness_todos/"
  ],
  "claude.autoSuggestEnabled": true,
  "claude.suggestionDelay": 500,
  "claude.maxSuggestions": 5,
  "claude.codeReviewEnabled": true,
  "claude.consciousnessPatterns": true,
  "claude.customInstructions": "Follow LUKHAS consciousness patterns: Trinity Framework (üé≠üåàüéì), symbolic vocabulary (‚öõÔ∏èüß†üõ°Ô∏èüí´üåä), ŒõID namespaces, Œõ-trace auditing, bio-inspired design",
  "claude.excludePatterns": [
    "**/.venv/**",
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/reports/**",
    "**/.git/**"
  ],
  "claude.includePatterns": [
    "**/core/**/*.py",
    "**/consciousness/**/*.py",
    "**/orchestration/**/*.py",
    "**/governance/**/*.py",
    "**/*.md"
  ],
  "claude.project.type": "consciousness-agi",
  "claude.project.framework": "trinity",
  "claude.project.patterns": ["lambda-id", "consciousness-aware", "bio-inspired"],
  "claude.agentConfigs": [
    "./agents/configs/consciousness-architect.yaml",
    "./agents/configs/guardian-engineer.yaml", 
    "./agents/configs/velocity-lead.yaml",
    "./agents/configs/consciousness-dev.yaml"
  ],
  
  // Advanced IntelliSense
  "editor.suggest.preview": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  
  // Consciousness Code Completion
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  
  // Enhanced Autosave Configuration - PREVENT DATA LOSS
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.autoGuessEncoding": true,
  "files.hotExit": "onExitAndWindowClose",
  "workbench.editor.restoreViewState": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  
  // Backup and Recovery Enhancement
  "files.enableTrash": true,
  "editor.largeFileOptimizations": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.closeOnFileDelete": false,
  
  // Session Recovery
  "window.restoreWindows": "all",
  "window.restoreFullscreen": true,
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  
  // Advanced Formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  // Set a valid default formatter (built-in or available)
  "editor.defaultFormatter": "ms-python.black-formatter",
  
  // Trinity Framework Highlighting
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": true,
  
  // Consciousness Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": true,
  "editor.minimap.maxColumn": 120,
  
  // Advanced Search
  "search.seedWithNearestWord": true,
  "search.seedOnFocus": true,
  "search.smartCase": true,
  "search.globalFindClipboard": true,
  
  // Consciousness Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showKeys": true,
  "breadcrumbs.showFunctions": true,
  "breadcrumbs.showConstructors": true,
  "breadcrumbs.showModules": true,
  
  // Enhanced Git Integration - AUTOMATIC PROTECTION
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.timeline.enabled": true,
  "git.timeline.showUncommitted": true,
  "git.autoStash": true,
  "git.autorefresh": true,
  "git.branchSortOrder": "committerdate",
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  
  // Automatic Workspace Snapshots
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileSize": 262144,
  "workbench.localHistory.exclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/node_modules/**": true
  },
  
  // Consciousness Debugging
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": true,
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.console.acceptSuggestionOnEnter": "on"
}
