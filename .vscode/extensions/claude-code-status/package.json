{
  "name": "claude-code-status",
  "displayName": "Claude Code Status",
  "description": "Status bar for Claude Code showing repo, model, and session time",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-status.refresh",
        "title": "Refresh Claude Code Status"
      }
    ],
    "configuration": {
      "title": "Claude Code Status",
      "properties": {
        "claudeCodeStatus.showRepo": {
          "type": "boolean",
          "default": true,
          "description": "Show repository name in status bar"
        },
        "claudeCodeStatus.showModel": {
          "type": "boolean",
          "default": true,
          "description": "Show Claude model in status bar"
        },
        "claudeCodeStatus.showTimer": {
          "type": "boolean",
          "default": true,
          "description": "Show session timer in status bar"
        },
        "claudeCodeStatus.sessionLimit": {
          "type": "number",
          "default": 120,
          "description": "Session time limit in minutes"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.103.0",
    "typescript": "^4.9.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
