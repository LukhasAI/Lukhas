# Integration Test Environment Configuration
# Copy this file to .env.integration and modify as needed
# These values match the docker-compose.integration.yml service configurations

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lukhas_test
POSTGRES_PASSWORD=lukhas_test_pass
POSTGRES_DB=lukhas_integration
DATABASE_URL=postgresql://lukhas_test:lukhas_test_pass@localhost:5432/lukhas_integration

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# MinIO (S3-compatible) Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=lukhas_minio
MINIO_SECRET_KEY=lukhas_minio_pass
MINIO_BUCKET=lukhas-integration
MINIO_USE_SSL=false

# Test Configuration
PYTHONPATH=.
TEST_TIMEOUT=300
