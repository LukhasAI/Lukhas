[importlinter]
root_packages =
    lukhas
    MATRIZ
include_external_packages = true

[importlinter:contract:prod_no_candidate]
name = Production must not import candidate
type = forbidden
source_modules = 
    lukhas
forbidden_modules = 
    candidate

[importlinter:contract:no_quarantine]
name = Nothing may import quarantine
type = forbidden
source_modules = 
    lukhas
forbidden_modules = 
    quarantine

[importlinter:contract:no_archive]
name = Nothing may import archive
type = forbidden
source_modules =
    lukhas
forbidden_modules =
    archive

[importlinter:contract:lane_consistency]
name = Lane constants must use schema_registry
type = forbidden
source_modules =
    lukhas
    candidate
forbidden_modules_regex =
    .*\.lanes?
    .*lane_enum.*
    .*lane_constants.*
